<!DOCTYPE html>
<html lang="<%= userData?.langue || 'fr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/css/navbar.css">
    <link rel="icon" href="/src/img/Logo.png" type="image/png">
    <link rel="stylesheet" href="/src/css/forms/theme.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Choisir une Langue</title>
    <style>
        .language-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin: 20px 0;
        }
        
        .language-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid #e0e0e0;
            background: #f9f9f9;
            position: relative;
        }
        
        .language-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .language-item input[type="radio"] {
            position: absolute;
            opacity: 0;
        }
        
        .language-item.active, .language-item:has(input[type="radio"]:checked) {
            border-color: #4285f4;
            background-color: #e8f0fe;
        }
        
        .flag {
            font-size: 24px;
            margin-right: 15px;
        }
        
        .language-name {
            font-weight: 600;
            flex-grow: 1;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="header">
            <a href="javascript:history.back()" class="back-arrow"><i class="fas fa-chevron-left"></i></a>
            <h2>Choisissez votre langue</h2>
        </div>
        
        <form action="/settings/langue" method="POST" id="langueForm">
            <div class="language-list">
                <label class="language-item <%= userData?.langue === 'fr' ? 'active' : '' %>">
                    <div class="flag">ðŸ‡«ðŸ‡·</div>
                    <div class="language-name">FranÃ§ais</div>
                    <input type="radio" name="langue" value="fr" <%= userData?.langue === 'fr' ? 'checked' : '' %>>
                </label>
                
                <label class="language-item <%= userData?.langue === 'en' ? 'active' : '' %>">
                    <div class="flag">ðŸ‡¬ðŸ‡§</div>
                    <div class="language-name">English</div>
                    <input type="radio" name="langue" value="en" <%= userData?.langue === 'en' ? 'checked' : '' %>>
                </label>
                
                <label class="language-item <%= userData?.langue === 'es' ? 'active' : '' %>">
                    <div class="flag">ðŸ‡ªðŸ‡¸</div>
                    <div class="language-name">EspaÃ±ol</div>
                    <input type="radio" name="langue" value="es" <%= userData?.langue === 'es' ? 'checked' : '' %>>
                </label>
                
                <label class="language-item <%= userData?.langue === 'de' ? 'active' : '' %>">
                    <div class="flag">ðŸ‡©ðŸ‡ª</div>
                    <div class="language-name">Deutsch</div>
                    <input type="radio" name="langue" value="de" <%= userData?.langue === 'de' ? 'checked' : '' %>>
                </label>
            </div>
            <button type="submit">Enregistrer</button>
        </form>
    </div>

    <script>
        document.querySelectorAll('.language-item input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.language-item').forEach(item => {
                    item.classList.remove('active');
                });
                
                this.closest('.language-item').classList.add('active');
            });
        });
    </script>
</body>
</html>
